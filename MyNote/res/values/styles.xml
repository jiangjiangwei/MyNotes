<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="mListview" parent="@android:style/Widget.AbsListView">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="mListview.Margin">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="clockAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/show_clock</item>
        <item name="@android:windowExitAnimation">@anim/exit_clock</item>
    </style>
    <!-- 底部滑动activityDialog动画 -->
    <style name="mActivityAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/activity_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/activity_bottom_out</item>
    </style>

    <style name="mSlideActivityDialog" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/mActivityAnim</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
    	<item name="android:windowIsTranslucent">true</item>
    	<!-- 无标题 -->
    	<item name="android:windowNoTitle">true</item>
    	<!-- 背景透明 -->
    	<item name="android:windowBackground">@android:color/transparent</item>
    	<!-- 模糊 -->
    	<item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>