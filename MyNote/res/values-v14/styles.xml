<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
    </style>
	<style name="actionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
	    <item name="android:background">#303537</item>
	    <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
	</style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget">
        <item name="android:textColor">#cfcfcf</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>